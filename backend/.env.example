# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Atlas Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mgnrega?retryWrites=true&w=majority

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Data.gov.in API Configuration
DATA_GOV_API_KEY=your_api_key_here
API_BASE_URL=https://api.data.gov.in/resource/

# Optional: Job Scheduler Configuration
RUN_ON_STARTUP=false
ENABLE_CRON_JOBS=true
FULL_SYNC_CRON=0 5 * * 0
HOURLY_SYNC_CRON=0 8 * * *

# Data Freshness Threshold (in hours)
# Used to decide when to trigger a background refresh. Defaults to 96 if unset.
# Increase if you prefer serving cached data longer before refreshing.
STALE_HOURS=96
